@model IEnumerable<LibraryManagement.Models.Author>

<div class="container">
    <h3 class="text-center">Add New Author</h3>
    <form asp-action="Create" method="post">
        <div class="form-row d-flex justify-content-between">
            <div class="col-md-4">
                <label>Author Name</label>
                <input class="form-control" name="Name" placeholder="Enter author name" />
            </div>
            <div class="col-md-2 align-self-center">
                <button type="submit" class="btn btn-primary mt-4">Create</button>
            </div>
        </div>
    </form>

    <hr />

    <form asp-action="SearchById" method="get" class="form-inline mb-3">
        <input type="number" name="id" class="form-control mr-2" placeholder="Search by Author ID" />
        <button type="submit" class="btn btn-secondary">Search by ID</button>
    </form>

    <h2 class="text-center">Author List</h2>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table table-striped text-center">
                <thead>
                    <tr>
                        <th>Author ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@author.AuthorId</td>
                            <td>@author.Name</td>
                            <td>
                                <div class="d-flex justify-content-between">
                                    <!-- 更新表单 -->
                                    <form asp-action="Update" asp-route-id="@author.AuthorId" method="post" class="d-flex">
                                        <input type="hidden" name="AuthorId" value="@author.AuthorId" />
                                        <input class="form-control mb-1 mr-1" type="text" name="Name" value="@author.Name" style="width: 150px;" />
                                        <button type="submit" class="btn btn-success mb-1 mr-1">Save</button>
                                    </form>

                                    <form asp-action="Delete" asp-route-id="@author.AuthorId" method="post" class="d-inline-block">
                                        <input type="hidden" name="id" value="@author.AuthorId" />
                                        <button type="submit" class="btn btn-danger mb-1" onclick="return confirm('Are you sure you want to delete this author?');">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
